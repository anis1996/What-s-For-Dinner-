<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECIPE NAME"
        android:textSize="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECIPE NAME"
        android:textSize="25dp"
        android:id="@+id/recipeNameInInformation"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_weight="1"
        android:src="@mipmap/d_dish_icon"
        android:id="@+id/imageViewInInformation"
        />


        <ListView

            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:id="@+id/ingInInformation"
            ></ListView>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DESCRIPTION OF RECIPE"
        android:textSize="10dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:lines="7"
        android:text="DESCRIPTION"
        android:textSize="25dp"
        android:id="@+id/descriptionInInformation"/>

    </ScrollView>
</LinearLayout>


</android.support.constraint.ConstraintLayout>